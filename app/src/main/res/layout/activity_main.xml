<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <GridView
            android:layout_width="240dp"
            android:layout_height="360dp"
            android:numColumns="10"
            android:horizontalSpacing="0dp"
            android:verticalSpacing="0dp"
            android:id="@+id/b_s_view"
            android:background="@color/colorPrimary">
        </GridView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <GridView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:numColumns="4"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:id="@+id/b_next_view">
            </GridView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="分数："
                android:textSize="20dp"
                android:id="@+id/score"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="等级："
                android:textSize="20dp"
                android:id="@+id/level"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="︿"
            android:textSize="30sp"
            android:id="@+id/b_btn_up"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="↑"
            android:layout_marginLeft="100dp"
            android:id="@+id/s_btn_up"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左移"
            android:textSize="30sp"
            android:id="@+id/b_btn_left"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text=">"
            android:layout_marginLeft="10dp"
            android:id="@+id/b_btn_right"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:id="@+id/s_btn_left"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="→"
            android:layout_marginLeft="10dp"
            android:id="@+id/s_btn_right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="﹀"
            android:textSize="30sp"
            android:id="@+id/b_btn_down"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="↓"
            android:layout_marginLeft="100dp"
            android:id="@+id/s_btn_down"/>
    </LinearLayout>

</LinearLayout>