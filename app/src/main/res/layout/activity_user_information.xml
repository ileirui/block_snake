<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInformation">

    <ViewFlipper
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoStart="true"
        android:flipInterval="3000"
        android:inAnimation="@android:anim/slide_in_left"
        android:outAnimation="@android:anim/slide_out_right"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019年第十七届齐鲁软件大赛参赛作品"
            android:textSize="20sp"
            android:ellipsize="middle"/>
    </ViewFlipper>
    <Button
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/back" />

    <ImageView
        android:id="@+id/user_picture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn_back"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/huaji" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游客"
        android:textSize="30sp"
        android:layout_alignBottom="@id/user_picture"
        android:layout_toRightOf="@id/user_picture"
        android:id="@+id/user_name"/>

    <Button
        android:id="@+id/change_name"
        android:layout_width="25dp"
        android:layout_height="21dp"
        android:layout_alignBottom="@id/user_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/user_name"
        android:background="@drawable/c_n" />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="2"
        android:layout_alignLeft="@id/user_picture"
        android:layout_below="@id/user_picture">
        <TextView
            android:text="模式"
            android:textSize="20dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"/>
        <TextView
            android:text="最高分"
            android:textSize="20dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_margin="10dp"/>
        <TextView
            android:text="简单"
            android:textSize="20dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"/>
        <TextView
            android:text="0"
            android:textSize="20dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:id="@+id/easy_score"/>
        <TextView
            android:text="普通"
            android:textSize="20dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"/>
        <TextView
            android:text="0"
            android:textSize="20dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:id="@+id/ordinary_score"/>
        <TextView
            android:text="困难"
            android:textSize="20dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"/>
        <TextView
            android:text="0"
            android:textSize="20dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:id="@+id/hard_score"/>
        <TextView
        android:text="噩梦"
        android:textSize="20dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="10dp"
        android:id="@+id/other_mode"/>
        <TextView
            android:text="0"
            android:textSize="20dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:id="@+id/other_score"/>
        <TextView
            android:text="双人"
            android:textSize="20dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:id="@+id/more_mode"/>
        <TextView
            android:text="0"
            android:textSize="20dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="10dp"
            android:id="@+id/more_score"/>
    </GridLayout>

</RelativeLayout>